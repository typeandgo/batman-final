# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentation override for all JS
[**.js]
charset = utf-8
indent_style = space
indent_size = 2

# Indentation override for all CSS
[**.(scss|css)]
charset = utf-8
indent_style = space
indent_size = 2


# Matches the exact files either package.json or .travis.yml
[package.json]
indent_style = space
indent_size = 2
